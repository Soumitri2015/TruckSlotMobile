<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruckSlot.Views.BookingConfirmation">

    <ContentPage.Content>

        <StackLayout>
            <Grid BackgroundColor="#524e48" Padding="10">
                <Label Text="You Have Succesfully Booked Your Slot" FontSize="Title" FontAttributes="Bold"  HorizontalTextAlignment="Center" TextColor="White"></Label>
            </Grid>
            <Grid>
                <Label x:Name="BookingReference" TextColor="Green" FontSize="Medium"></Label>
            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>